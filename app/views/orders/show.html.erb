<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h3> Thank you:) </h3>
    <h4> Your email that we used to send you a conformation is <%= @order.email %>
  </header>

  <div class="order-summary jumbotron">
    <% line_items = LineItem.where(order_id: @order.id) %>
    <% line_items.each do |line_item| %>
      <%= render 'item', product_id: line_item.product_id, line_total: line_item.total_price %>
    <% end %>
    Your order total: <%= humanized_money_with_symbol @order.total %> <br/>
    </h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
